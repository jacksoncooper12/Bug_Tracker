@model IEnumerable<Bug_Tracker.Models.ApplicationUser>
@{
    ViewBag.Title = "Index";
    var roleHelper = new Bug_Tracker.Helpers.RoleHelper();
}

<h2>Index</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayName("Current Role")
        </th>
        <th></th>
    </tr>

    @foreach (var user in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => user.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => user.Email)
            </td>
            <td>
                @roleHelper.ListUserRoles(user.Id).FirstOrDefault()
            </td>
            <td>
                <a href="@Url.Action("ManageUserRole", "users", new { id = user.Id })" style="text-decoration-line:none">
                    <div style="background-color:red; text-align:center; color:black; width:50%">Manage User Role</div>
                </a>     
            </td>
        </tr>
    }

</table>

