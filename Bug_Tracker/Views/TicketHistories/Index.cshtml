@model IEnumerable<Bug_Tracker.Models.TicketHistory>

@{
    ViewBag.Title = "Index";
}

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<div class="container" style="padding-top:2rem">
    <div class="row">
        <div class="col-lg-12">
            <div class="small-box" style="padding:3rem; background-color:#343a40; color:white">
                <h2>Ticket Histories</h2>
                <table class="table dataTable" id="history">
                    <thead>
                        <tr>
                            <th>
                                Ticket
                            </th>
                            <th>
                                Author
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Property)
                            </th>
                            <th>
                                Old Value
                            </th>
                            <th>
                                New Value
                            </th>
                            <th>
                                Date
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr onclick="window.location.href='@Url.Action("Details","Tickets", new { item.Ticket.Id})'" style="cursor:pointer">
                                <td>
                                    @item.Ticket.Title
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.User.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Property)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OldValue)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NewValue)
                                </td>
                                <td>
                                    @item.ChangedOn.ToString("M/dd/yyyy")
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $('#history').DataTable({
                "pageLength": 5,
                "order": [[5, "desc"]]
            });
        });
    </script>

}
